[sub_resource type="GDScript" id=12]
script/source = "extends Control

var player_inventory: Inventory setget set_inv
onready var compass = $Compass

func set_inv(value):
	player_inventory = value
	player_inventory.connect(\"new_entry\", self, \"_on_new_entry\")
	player_inventory.connect(\"updated_entry\", self, \"_on_updated_entry\")

onready var notif_lbl = $NotifLbl

func _ready() -> void:
	notif_lbl.visible = false

func set_crosshair_text(text : Texture):
	$Crosshair/TextureRect.texture = text

func _on_new_entry(entry: Inventory.InventoryEntry):
	inv_notif(entry)

func _on_updated_entry(entry: Inventory.InventoryEntry):
	inv_notif(entry)
	
func inv_notif(entry: Inventory.InventoryEntry):
	notif_lbl.queue_notification(\"%s (%d)\" % [entry.name, entry.quantity])
"

