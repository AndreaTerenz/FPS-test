[sub_resource type="GDScript" id=13]
script/source = "extends Label

var notif_queue : Array = []

onready var timer = $Timer

func queue_notification(msg: String):
	notif_queue.append(msg)
	
	if len(notif_queue) == 1:
		show_next()
	
func show_next():
	text = notif_queue.pop_front()
	visible = true
	timer.start()

func _on_timeout() -> void:
	if len(notif_queue) > 0:
		show_next()
	else:
		visible = false
"

