[sub_resource type="GDScript" id=1]
script/source = "extends ColorRect

var loader : ResourceInteractiveLoader = null

onready var anim := $AnimationPlayer

export var path := \"res://Scenes/Scene Hub.tscn\"

func _ready() -> void:
	var options : Dictionary = ArgParse.get_options()
	
	if options.has(\"skip_splash\"):
		get_tree().change_scene(path)
	else:
		anim.play(\"LogoAnim\")
	
func _process(delta: float) -> void:
	if loader:
		var stat = loader.poll()
		
		match stat:
			ERR_FILE_EOF:
				get_tree().change_scene_to(loader.get_resource())
				loader = null


func _on_animation_finished(anim_name: String) -> void:
	match anim_name:
		\"LogoAnim\":
			loader = ResourceLoader.load_interactive(path)
			$Label.visible = true
"

