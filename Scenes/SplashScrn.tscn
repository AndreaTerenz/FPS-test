[sub_resource type="GDScript" id=1]
script/source = "extends ColorRect

var loader : ResourceLoader = null

@onready var anim := $AnimationPlayer

@export var hub_path := \"res://Scenes/Scene Hub.tscn\"

func _ready() -> void:
	if Args.find_option(Args.SKIP_SPLASH) or OS.has_feature(\"debug\"):
		get_tree().change_scene_to_file(hub_path)
	else:
		anim.play(\"LogoAnim\")
	
func _process(delta: float) -> void:
	if loader:
		var stat = loader.poll()
		
		match stat:
			ERR_FILE_EOF:
				get_tree().change_scene_to_packed(loader.get_resource())
				loader = null


func _on_animation_finished(anim_name: String) -> void:
	match anim_name:
		\"LogoAnim\":
			loader = ResourceLoader.load_threaded_request(hub_path)
			$Label.visible = true
"

