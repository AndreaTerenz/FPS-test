script/source = "extends ColorRect

@onready var anim := $AnimationPlayer
@onready var label := $Label

@export var hub_path := \"res://Scenes/Scene Hub.tscn\"

func _ready() -> void:
	if Args.find_option(Args.SKIP_SPLASH) or OS.has_feature(\"debug\"):
		get_tree().change_scene_to_file(hub_path)
	else:
		anim.play(\"LogoAnim\")
	
func _process(delta: float) -> void:
	if label.visible:
		var stat = ResourceLoader.load_threaded_get_status(hub_path)
		
		match stat:
			ResourceLoader.THREAD_LOAD_LOADED:
				var scn : PackedScene = ResourceLoader.load_threaded_get(hub_path)
				get_tree().change_scene_to_packed(scn)


func _on_animation_finished(anim_name: String) -> void:
	match anim_name:
		\"LogoAnim\":
			ResourceLoader.load_threaded_request(hub_path)
			label.visible = true
"

